<% identity = Rails.application.config.x["identity"] %>
<% terminology = Rails.application.config.x["terminology"] %>
<div id="navbar" class="navbar navbar-default hidden-print" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed"
              data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "#{identity["site_name"]}", root_path, class: "navbar-brand" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="navbar-collapse collapse">
      <ul id="navbar_main" class="nav navbar-nav">
        <li><%= link_to "#{terminology["course"].pluralize}", courses_path %></li>
        <li><%= link_to 'Calendar', calendar_path %></li>
        <% if can? :manage, User %>
          <li><%= link_to 'Users', users_path %></li>
        <% end %>
        <% if can? :view_statistics, Enrollment %>
          <li><%= link_to 'Stats', stats_enrollments_path %></li>
        <% end %>
        <% if can? :manage, Setting %>
          <li><%= link_to 'Settings', settings_path %></li>
        <% end %>

      </ul>
      <%= render 'layouts/user_widget' %>
    </div>
  </div>
</div>
