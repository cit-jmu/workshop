<ul id="user_widget" class="nav navbar-nav navbar-right">
  <li>
    <a href="http://cit.jmu.edu">
      <span class="glyphicon glyphicon-home"></span>
      CIT Homepage
    </a>
  </li>
<% if user_signed_in? %>
  <li>
    <%= link_to profile_path, class: "navbar-link" do %>
      <span class="glyphicon glyphicon-user"></span>
      <%= current_user.display_name %>
    <% end %>
  </li>
  <li>
    <%= link_to destroy_user_session_path, method: :delete, class: "navbar-link" do %>
      <span class="glyphicon glyphicon-log-out"></span>
      Sign out
    <% end %>
  </li>
<% else %>
  <li>
    <%= link_to new_user_session_path, class: "navbar-link" do %>
      <span class="glyphicon glyphicon-log-in"></span>
      Sign in
    <% end %>
  </li>
<% end %>
</ul>
