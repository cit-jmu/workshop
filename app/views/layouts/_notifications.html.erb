<% if !Rails.env.production? %>
  <%= render partial: 'layouts/bootstrap_alert', locals: {
    bootstrap_alert_class: 'alert-warning',
    message: "Running in the <strong>#{Rails.env}</strong> environment."
  } %>
<% end %>
<% if alert %>
  <%= render partial: 'layouts/bootstrap_alert', locals: {
    bootstrap_alert_class: 'alert-danger',
    message: alert
  } %>
<% end %>
<% if notice %>
  <%= render partial: 'layouts/bootstrap_alert', locals: {
    bootstrap_alert_class: 'alert-success',
    message: notice
  } %>
<% end %>
