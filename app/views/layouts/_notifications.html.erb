<% if !Rails.env.production? %>
  <%= render partial: 'layouts/bootstrap_alert', locals: {
    bootstrap_alert_class: Rails.env == 'development' ? 'alert-info' : 'alert-warning',
    message: "Head's up! You're in the <strong>#{Rails.env}</strong> environment."
  } %>
<% end %>
<% if alert %>
  <%= render partial: 'layouts/bootstrap_alert', locals: {
    bootstrap_alert_class: 'alert-danger',
    message: alert
  } %>
<% end %>
<% if notice %>
  <%= render partial: 'layouts/bootstrap_alert', locals: {
    bootstrap_alert_class: 'alert-success',
    message: notice
  } %>
<% end %>
