<div class="panel panel-default report-card">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= @user == current_user ? 'My' : @user.display_first.possessive %>
      Report Card
    </h3>
  </div>
  <div class="panel-body">
    <strong><%= @user.enrollments.count %></strong>
    current <%= "enrollment".pluralize(@user.enrollments.count) %>

    <br />

    <strong>6</strong> courses completed
  </div>

  <h4 class="text-center">Completed Courses</h4>
  <div class="list-group">
    <% @courses.each do |course| %>
    <%= link_to course.title, course, class: 'list-group-item' %>
    <% end %>
  </div>
</div>
