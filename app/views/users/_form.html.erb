<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= pluralize(@user.errors.count, "error") %> prohibited this course from being saved:
        </h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-4">
      <div class="form-group<%= " has-error" if @user.errors[:username].any? %>">
        <%= f.label :username, class: 'control-label' %>
        <%= f.text_field :username, class: 'form-control' %>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="form-group<%= " has-error" if @user.errors[:email].any? %>">
        <%= f.label :email, class: 'control-label' %>
        <%= f.text_field :email, class: 'form-control' %>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="form-group<%= " has-error" if @user.errors[:employee_id].any? %>">
       <%= f.label :employee_id, "Employee ID", class: 'control-label' %>
       <%= f.number_field :employee_id, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <div class="form-group<%= " has-error" if @user.errors[:first_name].any? %>">
        <%= f.label :first_name, class: 'control-label' %>
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="form-group<%= " has-error" if @user.errors[:last_name].any? %>">
        <%= f.label :last_name, class: 'control-label' %>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="form-group<%= " has-error" if @user.errors[:nickname].any? %>">
        <%= f.label :nickname, class: 'control-label' %>
        <%= f.text_field :nickname, class: 'form-control' %>
      </div>
    </div>

  </div>

  <div class="row">
    <div class="col-sm-4">
      <div class="form-group<%= " has-error" if @user.errors[:phone_number].any? %>">
        <%= f.label :phone_number, class: 'control-label' %>
        <%= f.text_field :phone_number, class: 'form-control' %>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="form-group<%= " has-error" if @user.errors[:mailbox].any? %>">
        <%= f.label :mailbox, class: 'control-label' %>
        <%= f.text_field :mailbox, class: 'form-control' %>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="form-group<%= " has-error" if @user.errors[:department].any? %>">
       <%= f.label :department, class: 'control-label' %>
       <%= f.text_field :department, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <div class="form-group<%= " has-error" if @user.errors[:role].any? %>">
        <%= f.label :role, class: 'control-label' %>
        <%= f.select(:role, User.roles.keys.map {|role| role}) %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
    <% if @user.new_record? %>
      <%= link_to "Cancel", users_path, class: 'btn btn-default' %>
    <% else %>
      <%= link_to "Cancel", users_path, class: 'btn btn-default' %>
    <% end %>
  </div>
<% end %>
