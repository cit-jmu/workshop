<div class="page-header">
  <h1>
    <%= @user.display_name %>
    <small><%= @user.email %></small> 
  </h1>
</div>

<div class="row">
  <div class="col-sm-3">
    <div class="list-group">
      <% if @user == current_user %>
        <%= profile_nav_link_to 'Profile', profile_path %>
      <% else %>
        <%= profile_nav_link_to 'Profile', profile_user_path(@user) %>
      <% end %>

      <% if @user == current_user %>
        <%= profile_nav_link_to 'Settings', settings_path %>
      <% else %>
        <%= profile_nav_link_to 'Settings', settings_user_path(@user) %>
      <% end %>
    </div>
  </div>
  <div class="col-sm-9">
    <%= yield %>
  </div>
</div>
