<div class="page-header">
  <h1>
    <span class="glyphicon glyphicon-cog"></span>
    Settings
    <small>All application settings</small>
  </h1>
</div>

<div class="actions">
  <%= link_to 'Add new setting', new_setting_path, class: 'btn btn-default' %>
</div>

<% if @settings.any? %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th>Last Changed By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= setting.name %></td>
        <td><%= setting.value %></td>
        <td><%= setting.last_changed_by %></td>
        <td><%= link_to 'Show', setting %></td>
        <td><%= link_to 'Edit', edit_setting_path(setting) %></td>
        <td><%= link_to 'Destroy', setting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p>There aren't any application settings at this time.</p>
<% end %>
