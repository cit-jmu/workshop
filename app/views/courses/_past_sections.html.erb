<% section = Rails.application.config.x["terminology"]["section"] %>
<div class="panel panel-default panel-with-sections">
  <div class="panel-heading">
    <h3 class="panel-title">
      Past <%= section.pluralize %>
      <small>Archive <%= section.pluralize %> that are no longer current</small>
    </h3>
  </div>
  <div class="panel-body">
    <%= render @past_sections %>
  </div>
</div>
