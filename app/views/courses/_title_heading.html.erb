<% link_title ||= false %>
<div class="page-header">
  <%= yield :course_title_actions %>
  <h1 class="hidden-print">
    <% if link_title %>
      <%= link_to course.title, course %>
    <% else %>
      <%= course.title %>
    <% end %>
  </h1>
  <h1 class="visible-print-block"><%= course.title %></h1>
</div>
<div class="course-badges hidden-print">
  <%= render partial: 'courses/badges', locals: { course: course } %>
</div>
