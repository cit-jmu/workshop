<%= form_for(@course) do |f| %>
  <% if @course.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:
        </h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group<%= " has-error" if @course.errors[:title].any? %>">
    <%= f.label :title, class: 'control-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group<%= " has-error" if @course.errors[:summary].any? %>">
    <%= f.label :summary, class: 'control-label' %>
    <%= f.text_field :summary, class: 'form-control' %>
  </div>

  <div class="form-group<%= " has-error" if @course.errors[:description].any? %>">
    <%= f.label :description, class: 'control-label' %>
    <%= f.text_area :description, class: 'form-control', rows: 6 %>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <div class="form-group<%= " has-error" if @course.errors[:instructor].any? %>">
        <%= f.label :instructor, class: 'control-label' %>
        <%= f.text_field :instructor, class: 'form-control' %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="form-group<%= " has-error" if @course.errors[:duration].any? %>">
        <%= f.label :duration, class: 'control-label' %>
        <div class="input-group">
          <%= f.number_field :duration, class: 'form-control' %>
          <span class="input-group-addon">minutes</span>
        </div>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
    <% if @course.new_record? %>
      <%= link_to "Cancel", courses_path, class: 'btn btn-default' %>
    <% else %>
      <%= link_to "Cancel", @course, class: 'btn btn-default' %>
    <% end %>
  </div>
<% end %>
