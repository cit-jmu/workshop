<% terminology = Rails.application.config.x["terminology"] %>

<div class="page-header">
  <h1>Browse <%= terminology["workshop"].pluralize %></h1>
</div>
<div class="actions">
  <% if can? :create, Course %>
    <%= link_to "Add new #{terminology["course"]}", new_course_path, class: 'btn btn-default' %>
  <% end %>
</div>

<% if @current_courses.empty? %>
<p>
  There are no <%= terminology["course"].pluralize %> available at this time.
  <% if can? :create, Course %>
    Consider <%= link_to "adding some #{terminology["course"]}.pluralize", new_course_path %>.
  <% end %>
</p>
<% else %>
  <%= render 'shared/icon_legend' %>
  <%= render @current_courses %>
<% end %>

<% if @past_courses.any? and can?(:view_past_courses, Course)  %>
<div class="panel panel-default past-course-list">
  <div class="panel-heading">
    <h2 class="panel-title">
      Past <%= terminology["course"].pluralize %>
      <small>These are <%= terminology["course"].pluralize %> that have no current <%= terminology["section"].pluralize %></small>
    </h2>
  </div>
  <div class="panel-body">
    <%= render @past_courses %>
  </div>
</div>
<% end %>
