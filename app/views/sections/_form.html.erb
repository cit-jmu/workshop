<%= form_for([@course, @section]) do |f| %>
  <% if @section.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:
        </h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-6">
      <div class="form-group<%= " has-error" if @section.errors[:location].any? %>">
        <%= f.label :location, class: 'control-label' %><br>
        <%= f.text_field :location, class: 'form-control' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="form-group<%= " has-error" if @section.errors[:seats].any? %>">
        <%= f.label :seats, class: 'control-label' %><br>
        <%= f.number_field :seats, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group<%= " has-error" if @section.errors[:starts_at].any? %>">
    <%= f.label :starts_at, class: 'control-label' %><br>
    <%= f.datetime_select :starts_at, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
    <% if @section.new_record? %>
      <%= link_to "Cancel", course_sections_path, class: 'btn btn-default' %>
    <% else %>
      <%= link_to "Cancel", [@course, @section], class: 'btn btn-default' %>
    <% end %>
  </div>
<% end %>
