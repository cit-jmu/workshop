<div class="page-header">
  <h1>Sign In <small><%= Rails.application.config.x["identity"]["site_owner"] %></small></h1>
</div>

<div class="row">
  <div class="col-sm-offset-4 col-sm-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :username, :class => 'control-label' %>
        <%= f.text_field :username, class: 'form-control input-lg',
                                    autofocus: true,
                                    autocapitalize: 'off' %>
      </div>

      <div class="form-group">
        <%= f.label :password, :class => 'control-label' %>
        <%= f.password_field :password, class: 'form-control input-lg',
                                        autocomplete: 'off' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="checkbox">
          <label>
            <%= f.check_box :remember_me, checked: true %> Keep me signed in
          </label>
        </div>
      <% end %>

      <%= f.submit "Sign in", class: 'btn btn-success btn-lg btn-block' %>
    <% end %>
  </div>
</div>
